@model SmoothieDemo.Models.Smoothies

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Smoothies</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SmoothieId" />
            <div class="form-group">
                <label asp-for="SmoothieName" class="control-label"></label>
                <input asp-for="SmoothieName" class="form-control" />
                <span asp-validation-for="SmoothieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SmoothieCalories" class="control-label"></label>
                <input asp-for="SmoothieCalories" class="form-control" />
                <span asp-validation-for="SmoothieCalories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SmoothiePrice" class="control-label"></label>
                <input asp-for="SmoothiePrice" class="form-control" />
                <span asp-validation-for="SmoothiePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SmoothieImage" class="control-label"></label>
                <input asp-for="SmoothieImage" class="form-control" />
                <span asp-validation-for="SmoothieImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

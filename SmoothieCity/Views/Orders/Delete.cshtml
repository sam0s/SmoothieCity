@model SmoothieCity.Models.Order

@{
    ViewData["Title"] = "Delete";

}

<h1 class="text-center">Complete Order</h1>

<h3 class="text-center">Are you sure you want to complete this order?</h3>
<div class="text-center">
    <h4 class="text-center">Order</h4>
    <hr />

    <dl>
        <dd class="text-center">
            @Html.DisplayNameFor(model => model.Customer): @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dd class="text-center">
            @Html.DisplayNameFor(model => model.OrderTime): @Html.DisplayFor(model => model.OrderTime)
        </dd>

        <dd class="text-center">
            @Html.DisplayNameFor(model => model.PickUpTime): @Html.DisplayFor(model => model.PickUpTime)
        </dd>

        <dd class="text-center">
            @Html.DisplayNameFor(model => model.Submitted): @Html.DisplayFor(model => model.Submitted)
        </dd>
       

    </dl>



    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderID" />
        <input type="submit" value="Complete" class="btn btn-danger" />
    </form>
    <a asp-action="Index">Back to List</a>
</div>

@model SmoothieCity.Models.Order

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Finalize">
          
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group">
                <p>Special instructions for your order?</p>
                <input asp-for="SpecialInstructions" class="form-control" />
                <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>What time would you like to pickup your order?</p>
                <input asp-for="PickUpTime" class="form-control" />
                <span asp-validation-for="PickUpTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit Order!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

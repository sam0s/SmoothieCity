@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<style>

    body { 

    background-image: url('https://besthqwallpapers.com/Uploads/14-8-2019/101472/white-brick-wall-texture-white-brick-background-stone-texture-white-bricks.jpg'); 

    }

    h1 {
        color: black;
        font-size: 56px;
        font-weight: 999;
        padding-bottom: 8px;
        text-shadow: 4px 4px white;
        background-color: papayawhip;
        outline: groove;
    }
    h3 {
        color: black;
        font-size: 24px;
        font-weight: bold;
        text-shadow: 2px 2px white;
        background-color: papayawhip;
        outline: groove;
    }

</style>
<div class="text-center">
    @if (SignInManager.IsSignedIn(User))
    {

        <h1>Welcome to Smoothie City @User.Identity.Name!</h1>
        <h3>The one and only service to provide you with the smoothie you deserve.</h3>

        <p style="text-align:center;"><img style=" box-sizing:border-box;border-radius: 8px; box-shadow: 0px -2px 2px rgba(34,34,34,0.6);" src="~/homepage.jpg" width="700" height="400" /></p>

        @if (User.IsInRole("Manager"))
        {
            <a style='margin:16px;' class="btn btn-primary" asp-controller="UserRoles" asp-action="Index" title="Manage">Manage Users</a>
        }

        <a style='margin:16px;' class="btn btn-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account Settings</a>
        <form class="form-group" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-primary">Log out</button>
        </form>

    }
    else
    {
        <h1>Welcome to Smoothie City baby</h1>
        <h3>The one and only service to provide you with the smoothie you deserve.</h3>

        <p style="text-align:center;"><img style=" box-sizing:border-box;border-radius: 8px; box-shadow: 0px -2px 2px rgba(34,34,34,0.6);" src="~/homepage.jpg" width="700" height="400" /></p>


        <a style='margin:16px;' class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <div>
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    }
</div>